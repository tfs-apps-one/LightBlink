<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="150dp"
        android:backgroundTint="@null"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_img_onoff"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:src="@drawable/on_2"
        android:background="@null"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="65dp"
        android:backgroundTint="@null"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_img_blink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/blink1_on"
            android:background="@null"
             />

        <TextView
            android:id="@+id/text_blink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center|right"
            android:textColor="@color/teal_700"
            android:text="1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <SeekBar
            android:id="@+id/seek_blink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:progress="5"
            android:max="15"
            android:progressBackgroundTint="@color/design_default_color_primary_variant"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="65dp"
        android:backgroundTint="@null"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_img_brightness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/bright1_on"
            android:background="@null" />

        <TextView
            android:id="@+id/text_brightness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center|right"
            android:textColor="@color/teal_700"
            android:text="1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <SeekBar
            android:id="@+id/seek_brightness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:progress="5"
            android:max="15"
            android:progressBackgroundTint="@color/design_default_color_primary_variant"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
